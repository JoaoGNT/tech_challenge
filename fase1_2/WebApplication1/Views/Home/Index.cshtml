@{
    ViewData["Title"] = "Tech Challenge";
}
@using WebApplication1.ViewModels
 @model LoginViewModel
<div class="text-center">
    <h1 class="display-4">Tech Challenge - LuizaLabs</h1>
</div>
<br />
<br />
<br />
<div class="text-center">
        <h3 class="display-4">Log In</h3>
</div>
<div class="container d-flex justify-content-center">
            
   

            <form asp-controller="Account" asp-action="Login" method="post" class="form-horizontal" role="form">
               
                <div asp-validation-summary="All" class="text-danger"></div>
                 <input type="hidden" asp-for="ReturnUrl" />
                     <div class="form-group text-center">
                            <label asp-for="UserName" class="control-label"></label>
                            <div class="input text-center">
                                <input asp-for="UserName" class="form-control" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <label asp-for="Password" class="control-label"></label>
                            <div class="input text-center">
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <br />
                            <div class="button text-center wb-25 mb-3">
                                <input type="submit" class="btn btn-success" value="Log in" />
                            </div>
                        </div>
                    </form>

</div>


